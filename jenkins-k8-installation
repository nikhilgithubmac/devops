#Storageclass.yaml
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: local-storage
provisioner: kubernetes.io/no-provisioner
volumeBindingMode: WaitForFirstConsumer
------
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc
  namespace: jenkins
spec:
  storageClassName: local-storage
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 512Mi
      ------
#pv.yaml
      kind: PersistentVolume
apiVersion: v1
metadata:
  name: pv
  namespace: jenkins
spec:
  storageClassName: local-storage
  capacity:
    storage: 1Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "/mnt/data
    
    ------
#pvc.yaml
apiVersion: v1
kind: Service
metadata:
  name: jenkins
  namepace: jenkins
spec:
  type: NodePort
  ports:
    - port: 8080
      targetPort: 8080
      nodePort: 30000
  selector:
    app: jenkins
    
    ----
#Deployment.yaml
    apiVersion: apps/v1
kind: Deployment
metadata:
  name: jenkins-deployment
  namespace: jenkins
spec:
  replicas: 1
  selector:
    matchLabels:
      app: jenkins
  template:
    metadata:
      labels:
        app: jenkins
    spec:
      containers:
      - name: jenkins
        image: jenkins/jenkins:lts-jdk11
        ports:
        - containerPort: 8080
        volumeMounts:
        - mountPath: "/mnt/storage"
          name: my-storage
      volumes:
      - name: my-storage
        persistentVolumeClaim:
          claimName: pvc
